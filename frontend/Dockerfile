# stage 1: build
FROM node:20-alpine AS build
WORKDIR /app

# Pass VITE_API_URL at build time so Vite can bake it into the bundle
ARG VITE_API_URL
ENV VITE_API_URL=${VITE_API_URL}

# Install dependencies (copy lockfile if present for deterministic installs)
COPY package.json package-lock.json* ./
RUN npm ci --silent

# Copy source and build
COPY . .
RUN npm run build

# stage 2: serve with nginx
FROM nginx:stable-alpine
# Optional: remove default nginx welcome config if present
RUN rm -f /etc/nginx/conf.d/default.conf

# Copy built assets
COPY --from=build /app/dist /usr/share/nginx/html

# Recommended: provide a simple nginx config that serves SPA and optionally proxies /api
# If you want a custom config, add it as nginx.conf and COPY it here:
# COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]